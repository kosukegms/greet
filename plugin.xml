<?xml version='1.0' encoding='utf-8'?>
<plugin id="greet-plug-in" version="0.1.0" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>greet</name>
    <engines>
        <engine name="cordova" version=">=3.4.0"/>
        </engines>
    <js-module name="greet" src="www/greet.js">
        <clobbers target="cordova.plugins.greet" />
    </js-module>

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="Greet">
                <param name="android-package" value="com.example.plugin.Greet"/>
            </feature>
        </config-file>
        <source-file src="src/android/greet.js" target-dir="src/com/example/plugin/"/>
    </platform>

    <platform name="browser">

        <config-file target="config.xml" parent="/*">
            <feature name="Greet">
                <param name="browser-package" value="Greet"/>
            </feature>
        </config-file>

        <js-module src="src/browser/greet.js" name="Greet">
            <runs/>
        </js-module>

    </platform>
</plugin>
